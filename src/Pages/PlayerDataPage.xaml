                <Button x:Name="btnLookup" Content="Lookup" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0, 30, 0, 0" CornerRadius="8" Width="100" Click="btnLookup_Click"/>
                <Button x:Name="btnResetStats" Content="Reset" HorizontalAlignment="left" VerticalAlignment="Center" Margin="0, 30, 0, 0" CornerRadius="8" Width="100" Click="btnResetStats_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Setters>
                                <Setter Property="Background" Value="#AF1030"/>
                            </Style.Setters>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
