                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <!--#endregion Row Definitions-->

            <!--#region Player Name-->
            <StackPanel Orientation="Horizontal" Margin="5, 35, 0, 0" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
